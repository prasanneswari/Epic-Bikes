<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.widget.ActionBar.Title"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/trip_time" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"


        >

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="#fff"
            android:layout_marginRight="10dp"
            fab:menu_colorPressed="#fff"
            fab:menu_animationDelayPerItem="50"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_colorPressed="@color/white"
            fab:menu_labels_colorNormal="@color/white"
            fab:menu_labels_colorRipple="#99d4d4d4"
            fab:menu_colorRipple="#99d4d4d4"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/help"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_position="right"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_textSize="18dp"
            fab:menu_openDirection="up"
            fab:menu_shadowColor="#66aff198"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="4dp"
            fab:menu_showShadow="true"
            fab:menu_labels_style="@style/custom_fab"
            >
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_label="Unable To Unlock ?"
                fab:fab_size="mini"
                android:onClick="unabletounlock"
                tools:ignore="OnClick"
                android:layout_margin="@dimen/fab_margin"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white_pressed"
                />

            <com.github.clans.fab.FloatingActionButton
                android:onClick="unabletoend"
                tools:ignore="OnClick"                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_label="Unable To End Trip ?"
                fab:fab_size="mini"
                android:layout_margin="@dimen/fab_margin"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white_pressed"

                />

            <com.github.clans.fab.FloatingActionButton
                android:onClick="reportdamage"
                tools:ignore="OnClick"                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_label="Report Damage"
                fab:fab_size="mini"
                android:layout_margin="@dimen/fab_margin"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white_pressed"

                />

            <com.github.clans.fab.FloatingActionButton
                android:onClick="faqs"
                tools:ignore="OnClick"                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_label="F.A.Qâ€™s"
                fab:fab_size="mini"
                android:src="@drawable/faqsinfo"
                android:layout_margin="@dimen/fab_margin"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white_pressed"

                />
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom|center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END TRIP"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20dp"
            android:id="@+id/endbtn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/btn_back"
            android:drawableStart="@drawable/unlock_bike"
            android:background="@drawable/btn_back"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

